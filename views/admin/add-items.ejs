<!DOCTYPE html>
<html>
<head>
  <title><%= literals.admin.TITLE %></title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <link rel="stylesheet" href="/stylesheets/admin.css" />
</head>
<body>
<div class="container">
  <h1 class="title"><%= literals.admin.HEADER %></h1>
  <div class="admin-form-container">
    <form action="/admin/add-item" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="itemName"><%= literals.admin.ITEM_NAME_LABEL %></label>
        <input type="text" id="itemName" name="itemName" placeholder="Enter item name" required />
      </div>
      <div class="form-group">
        <label for="itemType"><%= literals.admin.ITEM_TYPE_LABEL %></label>
        <input type="text" id="itemType" name="itemType" placeholder="Enter item type (e.g., Weapon, Armor)" required />
      </div>
      <div class="form-group">
        <label for="itemDescription"><%= literals.admin.ITEM_DESCRIPTION_LABEL %></label>
        <textarea id="itemDescription" name="itemDescription" placeholder="Brief description..." rows="4" required></textarea>
      </div>
      <div class="form-group">
        <label for="itemQuality"><%= literals.admin.ITEM_QUALITY_LABEL %></label>
        <div class="custom-select-wrapper">
          <select id="itemQuality" name="itemQuality" required>
            <option value="common" class="select-common">Common</option>
            <option value="rare" class="select-rare">Rare</option>
            <option value="epic" class="select-epic">Epic</option>
            <option value="legendary" class="select-legendary">Legendary</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="itemImage">Item icon</label>
        <input type="file" id="itemImage" name="itemImage" accept="image/*" required />
      </div>
      <button type="submit" class="button"><%= literals.admin.SUBMIT_BUTTON %></button>
    </form>
  </div>
</div>

</body>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const qualitySelect = document.getElementById("itemQuality");

    function updateSelectColor() {
      const selectedOption = qualitySelect.options[qualitySelect.selectedIndex];
      qualitySelect.style.color = getComputedStyle(selectedOption).color;
    }

    updateSelectColor();

    qualitySelect.addEventListener("change", updateSelectColor);
  });
</script>


</html>
